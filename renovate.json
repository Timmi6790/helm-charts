{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigests",
    "workarounds:all"
  ],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "auto",
  "timezone": "Europe/Berlin",
  "minimumReleaseAge": null,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^charts/[^/]+/Chart\\.ya?ml$/"
      ],
      "matchStrings": [
        "(?m)^name:\\s*(?<chartName>[\\w\\-]+)[\\s\\S]*?^appVersion:\\s*\"?(?<currentValue>v?[0-9][^\"\\s]*)\"?"
      ],
      "depNameTemplate": "timmi6790/{{{chartName}}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^charts/[^/]+/values\\.ya?ml$/"
      ],
      "matchStrings": [
        "(?m)^image:\\s*[\\s\\S]*?^\\s*repository:\\s*(?<depName>[^\\s#]+)[\\s\\S]*?^\\s*tag:\\s*\"?(?<currentValue>v?[0-9][^\"\\s#]*)\"?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "all non-major actions",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "matchManagers": [
        "helmv3",
        "helm-values"
      ],
      "groupName": "all non-major charts",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    }
  ]
}
